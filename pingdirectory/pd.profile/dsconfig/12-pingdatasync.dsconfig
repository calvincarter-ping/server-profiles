#
# Ping Data Sync Configuration
#

dsconfig set-access-control-handler-prop \
  --add global-aci:'(targetattr="*")(version 3.0; acl "Give PingDataSync Access to all to handle syncing between servers"; allow(all) userdn="ldap:///cn=pingdatasync,cn=Root DNs,cn=config";)' \

  --add global-aci:'(target="ldap:///cn=config")(targetscope="subtree")(targetattr="*||+")(version 3.0; acl "Give PingDataSync Access to cn=config"; allow(all) userdn="ldap:///cn=pingdatasync,cn=Root DNs,cn=config";)' \

  --add global-aci:'(target="ldap:///cn=Tasks")(targetscope="subtree")(targetattr="*||+")(version 3.0; acl "Give PingDataSync Access to cn=Tasks"; allow(all) userdn="ldap:///cn=pingdatasync,cn=Root DNs,cn=config";)'